

class Solution {
public:
    int minCost(int n, vector<vector<int>>& edges) {
        unordered_map<int,vector<pair<int,int>>>g;
        for (auto &x : edges){
            int u = x[0], v = x[1], w = x[2];
            g[u].push_back({v,w});
            g[v].push_back({u,2*w});
        }
        vector<int>vis(n,0),dis(n,1e9);
        priority_queue<pair<int,int>>q;
        q.push({0,0}); dis[0] = 0;

        while(!q.empty()){
            int u = q.top().second;
            q.pop();
            if (vis[u]) continue;
            vis[u] = 1;
            for (auto [v,w] : g[u]){
                if (dis[u] + w < dis[v]){
                    dis[v] = dis[u] + w;
                    q.push({-dis[v],v});
                }
            }
        }
        return (dis[n-1] == 1e9 ? -1 : dis[n-1]);
    }
};
